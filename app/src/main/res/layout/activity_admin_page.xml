<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPage"
    android:background="@color/white">

    <EditText
        android:id="@+id/candidate_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter candidate name"
        android:textColor="@color/black"
        android:textColorHint="#6E6E6E"
        android:background="@drawable/curve_rectangle"
        android:padding="20dp"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/add_candidate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Candidate"
        android:textAlignment="center"
        android:background="@drawable/curve_rectangle"
        android:layout_marginTop="10dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#2196F3"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/candidate_name_input"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/candidate_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/add_candidate_button"/>


    <TextView
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT "
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/curve_rectangle"
        android:backgroundTint="#ACACAC"
        android:drawableLeft="@drawable/baseline_logout_24"
        android:padding="10dp"
        android:drawablePadding="10dp"/>

</RelativeLayout>